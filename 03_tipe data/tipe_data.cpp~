#include <iostream>
#include <limits>

using namespace std;

int main(){
	// Bilangan bulat
	int a = 5; // 32-bit
	long b = 5;
	short c = 7;
	unsigned int d = 3; // sama kayak int tapi gk ada plus atau minus, jadi lebih main di memory allocation sih

	// Bilangan decimal
	float e = 1.0;
	double f = 20.44;

	// Character
	char g = 'a'; //Character 1-bit

	// Boolean
	bool h = true; // True or false

	cout << d << endl;
	cout << sizeof(d) << " byte" << endl; //Lihat ukuran memory yang dipakai untuk tipe data
	cout << numeric_limits<unsigned int>::max() << endl;
	cout << numeric_limits<unsigned int>::min() << endl;
	cin.get();
	return 0;
}
